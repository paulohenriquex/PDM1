<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".Destino">

    <TextView
        android:id="@+id/textViewDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destino: [Destino]"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnVerMapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver no Mapa" />

    <Button
        android:id="@+id/btnPesquisarVoos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesquisar Voos" />

    <Button
        android:id="@+id/btnVerFotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Fotos" />

    <Button
        android:id="@+id/btnPartilhar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Partilhar Destino" />

</LinearLayout>